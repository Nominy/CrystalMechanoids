<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>CM_ColorSyncBlock</defName>
    <label>crystal sync block</label>
    <description>A decorative crystal block that can synchronize its color with your mechanoids. When mechanoid color synchronization is enabled, this block will automatically change its color to match your mechanoid's allegiance color.</description>
    <thingClass>CrystalMechanoids.Building_ColorSyncBlock</thingClass>
    <category>Building</category>
    <graphicData>
      <texPath>Things/Building/Misc/TempControl/Cooler</texPath>
      <graphicClass>Graphic_Single</graphicClass>  
      <shaderType>Cutout</shaderType>
      <drawSize>(1,1)</drawSize>
      <linkType>CornerFiller</linkType>
      <linkFlags>
        <li>Wall</li>
        <li>Rock</li>
      </linkFlags>
      <color>(200, 230, 255)</color>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <blockWind>true</blockWind>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>0.4</fillPercent>
    <coversFloor>false</coversFloor>
    <placingDraggableDimensions>0</placingDraggableDimensions>
    <tickerType>Rare</tickerType>
    <rotatable>false</rotatable>
    <statBases>
      <WorkToBuild>800</WorkToBuild>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>10</Mass>
      <Flammability>0.5</Flammability>
      <Beauty>3</Beauty>
    </statBases>
    <costList>
      <Steel>25</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
    </costList>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>10</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(120, 180, 255, 0)</glowColor>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
    </placeWorkers>
    <building>
      <ai_chillDestination>false</ai_chillDestination>
      <buildingTags>
        <li>Misc</li>
      </buildingTags>
    </building>
    <constructEffect>ConstructMetal</constructEffect>
    <researchPrerequisites>
      <li>BasicMechtech</li>
    </researchPrerequisites>
    <designationCategory>Furniture</designationCategory>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsFurniture</li>
    </thingCategories>
  </ThingDef>

</Defs> 